<!-- 格式 https://libvirt.org/format.html -->
<!-- 校验 virt-xml-validate myvm.xml -->
<domain type='kvm'>
  <!-- 虚拟机名字 -->
  <name>myvm</name>
  <!-- UUID 类字段会自动生成 -->
  <!-- <uuid>b5b92c38-5df2-4d3c-9464-857103b519fc</uuid> -->

  <!-- <title>A short description - title - of the domain</title> -->
  <!-- <description>Some human readable description</description> -->

  <!-- 元信息 -->
  <metadata>
    <libosinfo:libosinfo xmlns:libosinfo="http://libosinfo.org/xmlns/libvirt/domain/1.0">
      <libosinfo:os id="http://alpinelinux.org/alpinelinux/3.8"/>
    </libosinfo:libosinfo>
  </metadata>

  <!-- 系统 - 最基本配置 -->
  <os>
    <type arch='x86_64' machine='pc-i440fx-4.0'>hvm</type>
    <boot dev='hd'/>
  </os>

  <!-- CPU -->
  <vcpu placement='static' current='8'>16</vcpu>
  <!-- 动态
  <vcpus>
    <vcpu id='0' enabled='yes' hotpluggable='no' order='1'/>
    <vcpu id='1' enabled='no' hotpluggable='yes'/>
  </vcpus>
  -->

  <!-- 启动时候申请内存 -->
  <!-- KiB=2^10=1024 KB=10^3=1000 -->
  <memory unit='KiB'>16777216</memory>
  <!-- 最大内存 -->
  <!-- <maxMemory unit='KiB'>16777216</maxMemory> -->
  <!-- 如果小于 max 则允许 ballooning -->
  <currentMemory unit='KiB'>16777216</currentMemory>

  <resource>
    <partition>/machine</partition>
  </resource>

  <!-- 使用 HOST 相同的模型 -->
  <cpu mode='host-model' check='partial'>
    <model fallback='allow'/>
  </cpu>
  <!-- 时钟 - 一般为 utc - windows 可能需要设置为 localtime -->
  <clock offset='utc'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
  </clock>
  <!-- 事件处理 -->
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  <!-- 电源管理 -->
  <pm>
    <suspend-to-mem enabled='no'/>
    <suspend-to-disk enabled='no'/>
  </pm>
  <!-- 特性控制 -->
  <features>
    <!-- 电源管理 - 重启、关机 -->
    <acpi/>
    <!-- IRQ 管理 -->
    <apic/>
  </features>

  <!-- 设备 -->
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <!-- 磁盘 - 类型 file、block、dir、network、volume、nvme - 设备 floppy、disk、cdrom、lun(iscsi) -->
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <!-- 需要修改 -->
      <source file='/data/vms/myvm.qcow2'/>
      <backingStore/>
      <!-- 暴露给 guest 的设备 -->
      <target dev='hda' bus='ide'/>
      <address type='drive' controller='0' bus='0' target='0' unit='0'/>
    </disk>
    <controller type='usb' index='0' model='ich9-ehci1'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x7'/>
    </controller>
    <controller type='usb' index='0' model='ich9-uhci1'>
      <master startport='0'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x0' multifunction='on'/>
    </controller>
    <controller type='usb' index='0' model='ich9-uhci2'>
      <master startport='2'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x1'/>
    </controller>
    <controller type='usb' index='0' model='ich9-uhci3'>
      <master startport='4'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x2'/>
    </controller>
    <controller type='pci' index='0' model='pci-root'/>
    <controller type='ide' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x1'/>
    </controller>
    <controller type='virtio-serial' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x0'/>
    </controller>
    <!-- 网络 - 如果删除了 mac 会自动生成 -->
    <interface type='network'>
      <mac address='52:54:00:53:fe:43'/>
      <source network='default'/>
      <model type='virtio'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x03' function='0x0'/>
    </interface>
    <serial type='pty'>
      <target type='isa-serial' port='0'>
        <model name='isa-serial'/>
      </target>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <channel type='unix'>
      <!-- QEMU Agent -->
      <source mode='bind' path='/data/vms/myvm.agent'/>
      <target type='virtio' name='org.qemu.guest_agent.0'/>
      <address type='virtio-serial' controller='0' bus='0' port='1'/>
    </channel>
    <input type='mouse' bus='ps2'/>
    <input type='keyboard' bus='ps2'/>
    <graphics type='vnc' port='-1' autoport='yes' listen='0.0.0.0'>
      <listen type='address' address='0.0.0.0'/>
    </graphics>
    <video>
      <model type='cirrus' vram='16384' heads='1' primary='yes'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x02' function='0x0'/>
    </video>
    <memballoon model='virtio'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x06' function='0x0'/>
    </memballoon>
  </devices>
  <seclabel type='dynamic' model='dac' relabel='yes'/>
</domain>
